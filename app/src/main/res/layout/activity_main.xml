<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.girtmobile.irishphrases.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/failte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where are &#10; you from"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/breithla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy &#10;Birthday"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/iocfaidh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="She'll Pay"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/leithsceal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/mile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/sceal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:onClick="buttonTapped"
            android:layout_gravity="fill"/>


    </GridLayout>
</RelativeLayout>
